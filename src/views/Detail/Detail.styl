.detail-wrapper
  position relative
  width 100%
  height 100%
  padding 45px 0 50px 0
  overflow hidden
  background-color #fff
  z-index 10
  .goodsinfo-box
    padding 5px 0 10px 0
    border-bottom 5px solid #eee
    .title
      font-size 20px
      font-weight 700
      line-height 26px
    .price-box
      span
        margin 0 5px
      .new-price
        font-size 24px
        font-weight 700
        color lightcoral
      .old-price
        text-decoration line-through
        color #666
      .tag
        padding 1px
        border-radius 3px
        color #fff
        background-color lightpink
    .goods-message
      display flex
      justify-content space-between
      padding 20px 0 5px 0
      border-bottom 1px solid #eee
  .goodsshow-box
    width 100%
    img
      width 100%
  .goodsparams-box
    font-size 18px
    .rule
      width 100%
      tbody
        width 100%
        .rule-tr
          display flex
          border-bottom 1px solid #eee
          .rule-td
            flex 1
            display flex
            justify-content center
            align-items center
            padding 20px 0
    .info
      font-size 18px
      tbody
        width 100%
        .info-tr
          display flex
          width 100%
          border-bottom 1px solid #eee
          .info-td
            width 75%
            text-align left
            padding 20px 0
            &:first-child
              width 25%
              text-align center
  .rate-box
    border-bottom 10px solid #eee
    .rate-head
      padding 10px
      overflow hidden
      border-bottom 1px solid #eee
      .title
        float left
      .more
        float right
    .rate-content
      padding 30px 0
      .user
        display flex
        align-items center
        img
          width 50px
          height 50px
          border-radius 50%
          border 1px solid lightcoral
          margin-right 10px
      .rate-text
        margin 20px 0
