.profile-wrapper
  width 100%
  height 100%
  padding 45px 0 50px 0
  overflow hidden
  .user-box
    position relative
    padding 30px
    background-color lightpink
    .user-content
      color #fff
      padding-left 60px
      .login
        margin-bottom 5px
    .arrow
      position absolute
      top 50%
      right 20px
      width 15px
      height 15px
      border-top 3px solid #fff
      border-right 3px solid #fff
      transform translateY(-50%) rotate(45deg)
  .my-box
    display flex
    border-bottom 10px solid #eee
    .my-item
      flex 1
      display flex
      flex-direction column
      justify-content space-around
      align-items center
      padding 20px
      &:nth-child(2)
        border-left 1px solid #eee
        border-right 1px solid #eee
      .text
        margin-top 10px
  .option-top
    border-bottom 10px solid #eee
    .option-top-item
      padding 15px
      border-bottom 1px solid #eee
  .option-bottom
    .option-bottom-item
      padding 15px
      border-bottom 1px solid #eee
