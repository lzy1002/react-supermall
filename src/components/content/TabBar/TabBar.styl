.tabbar-wrapper
  position fixed
  left 0
  right 0
  bottom 0
  height 50px
  display flex
  border-top 1px solid #ccc
  background-color #fff
  .tabbar-item
    flex 1
    display flex
    flex-direction column
    justify-content space-evenly
    align-items center
    font-size 14px
    &.active
      color hotpink
    img
      width 24px
      height 24px
